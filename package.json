{
  "name": "electron-demo",
  "version": "1.0.0",
  "description": "First Electorn Project",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win --x64"
  },
  "author": "wuhuan",
  "license": "ISC",
  "dependencies": {
    
  },
  "devDependencies": {
    "electron": "^8.2.4",
    "electron-builder": "^22.5.1"
  },
  "nsis": {
    "oneClick": false, 
    "allowElevation": true, 
    "allowToChangeInstallationDirectory": true, 
    "installerIcon": "favicon.ico",
    "uninstallerIcon": "uninstall.ico",
    "installerHeaderIcon": "favicon.ico",
    "createDesktopShortcut": true, 
    "createStartMenuShortcut": true,
    "shortcutName": "智能闸口"
  },
  "build": {
    "appId": "IGate",
    "productName": "智能闸口",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "favicon.ico",
      "target": [{
        "target": "nsis",
        "arch": ["ia32"]
      }]
    }
  }
}
